<body>
  <head>
    <link rel="stylesheet" href="/css/signup.css">
    
  </head>
  <main>
    <div class= 'box'>
    <div class='signup'>
      <p> Register for an Account</p>
    </div>
  
    <form action='/signup' method='POST'>
      <div class='userText'>
        <p> Username: </p>
      </div>
      <div>
        <input class='userButton' type='text' name='username' id='username' required/>
      </div>
      <div class='signText'>
        <p> Password: </p>
      </div>
      <div>
        <input class='passButton' type='password' name='password' id='password' required />
      </div>
      <div class='rsignText'>
        <p> Repeat Password: </p>
      </div>
      <div>
        <input class='rpassButton' type='password' name='rpassword' id='rpassword' required/>
      </div>
      <br>
      <br>
      <div>
        <input class='submitButton' , type='submit' />
      </div>
      <div class='extraText'>
        {{!--<p> Don't have an account? Register HERE </p>--}}
      </div>
    </form>
    </div>
  </main>
